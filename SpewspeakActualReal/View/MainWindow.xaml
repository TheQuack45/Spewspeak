<Window x:Name="ConversionWindow" x:Class="SpewspeakActualReal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpewspeakActualReal"
        mc:Ignorable="d"
        Title="Spewspeak" Height="350" Width="525" MinHeight="350" MinWidth="525"
        xmlns:ViewModel="clr-namespace:SpewspeakActualReal.ViewModel">
    <Window.DataContext>
        <ViewModel:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBox x:Name="inOutTextBox" Margin="10,10,10,60" TextWrapping="Wrap" IsReadOnly="{Binding Path=IsConverting, UpdateSourceTrigger=PropertyChanged}" Text="{Binding Path=ConvertedResult, UpdateSourceTrigger=PropertyChanged}" LostFocus="inOutTextBox_LostFocus" GotFocus="inOutTextBox_GotFocus"/>
        <Button x:Name="smartifyButton" Content="Use the Best Words" Margin="0,0,13,10" Height="45" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150" Command="{Binding SmartifyCommand}" CommandParameter="{Binding ElementName=inOutTextBox, Path=Text}"/>
    </Grid>
</Window>
